<%= form_with(model: @product, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %>
    <%= form.file_field :image_url, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= form.label :price %>
  <%= form.text_field :price, class: 'form-control', placeholder: 'Enter price here' %>
</div>
<div class="form-group">
    <%= form.label :category_id, "Select Category" %>
    <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Choose a category" }, class: "form-control" %>
  </div>
<div class="form-group">
<%= form.label :quantity %>
<%= form.text_field :quantity, class: 'form-control', placeholder: 'Enter the quantity' %>
</div>


  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>