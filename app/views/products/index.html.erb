

<%= stylesheet_link_tag 'products', media: 'all' %>

<p class="notice"><%= notice %></p>
<div class="text-center">
  <h1>Listed Products</h1>
</div>

<div class="container mt-4">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if product.image_url.present? %>
            <div class="card-img-top" style="height: 150px; overflow: hidden;">
              <%= image_tag product.image_url, alt: product.title, style: "object-fit: contain; height: 200px;" %>
            </div>
          <% else %>
            <div class="card-img-top placeholder-image" style="height: 150px; display: flex; align-items: center; justify-content: center;">No image available.</div>
          <% end %>

          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-bottom: 0.5rem;"><%= product.title %></h5>
            <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-bottom: 0.5rem;"><%= product.description %></p>
            <p class="card-text"><%= product.price %></p>

            <div class="mt-auto"> <!-- Pushes button to the bottom -->
              <%= link_to "Show this product", product, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mt-4"> <!-- Centering the button -->
  <%= link_to "New product", new_product_path, class: 'btn btn-success' %>
</div>
