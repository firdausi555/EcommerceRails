<%= stylesheet_link_tag 'products', media: 'all' %>

<h1>Products</h1>

<p class="notice"><%= notice %></p>

<h1 class="text-center">Products</h1>

<div class="container mt-4">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
          <% if product.image_url.present? %>
          <div>
            <%= image_tag product.image_url, alt: product.title %>
          </div>
        <% else %>
          <p>No image available.</p>
        <% end %>

            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text"><%= product.price %></p>


            <%= link_to "Show this product", product, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New product", new_product_path, class: 'btn btn-success mt-4' %>
